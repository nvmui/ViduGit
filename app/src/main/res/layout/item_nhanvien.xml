<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="#65D66A"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_TenNV"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="#111" />

        <TextView
            android:id="@+id/tv_DiaChi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#111" />
        <TextView
            android:id="@+id/tv_SoDT"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#111" />

        <ImageView
            android:id="@+id/im_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:srcCompat="@drawable/edit"></ImageView>

        <ImageView
            android:id="@+id/im_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:srcCompat="@drawable/delete"></ImageView>
    </LinearLayout>
</LinearLayout>